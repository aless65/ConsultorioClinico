
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <meta name="description" content="A list of fields that a user will input data into and submit to a company or individual.">
    <title>Register | Nifty - Admin Template</title>

    <!-- STYLESHEETS -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~--- -->
    <!-- Fonts [ OPTIONAL ] -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css">

    <!-- Bootstrap CSS [ REQUIRED ] -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Nifty CSS [ REQUIRED ] -->
    <link rel="stylesheet" href="~/css/nifty.min.css">

    <!-- Nifty Demo Icons [ OPTIONAL ] -->
    <link rel="stylesheet" href="~/css/demo-purpose/demo-icons.min.css">

    <!-- Demo purpose CSS [ DEMO ] -->
    <link rel="stylesheet" href="~/css/demo-purpose/demo-settings.min.css">

    <!-- Toastr -->
    <link rel="stylesheet" href="~/css/toastr/toastr.min.css">

    <link rel="stylesheet" href="~/vendors/charts.css/charts.min.css">
</head>

<body class="">

    <!-- PAGE CONTAINER -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <div id="root" class="root front-container">

        <!-- CONTENTS -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <section id="content" class="content">
            <div class="content__boxed w-100 min-vh-100 d-flex flex-column align-items-center justify-content-center">
                <div class="content__wrap">

                    <!-- Login card -->
                    <div class="card shadow-lg">
                        <div class="card-body">

                            <div class="text-center">
                                <h1 class="h3">Iniciar sesión</h1>
                            </div>

                            <form class="mt-5" asp-action="Index" id="formLogin">

                                <div class="mb-3">
                                    <input type="text" class="form-control" id="user" name="user" placeholder="Username" autofocus>
                                    <label hidden class="text-danger" id="userValida">Ingrese un usuario</label>
                                </div>

                                <div class="mb-3">
                                    <input type="password" name="contrasena" id="contrasena" class="form-control" placeholder="Password">
                                    <label hidden class="text-danger" id="contValida">Ingrese una contraseña</label>
                                </div>

                                <div class="form-check">
                                    <input id="_dm-loginCheck" class="form-check-input" type="checkbox">
                                    <label for="_dm-loginCheck" class="form-check-label">
                                        Remember me
                                    </label>
                                </div>

                                <div class="d-grid mt-5">
                                    <button class="btn btn-primary btn-lg" id="login" type="button">Sign In</button>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>

            </div>
    </div>
    </section>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- END - CONTENTS -->
    </div>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- END - PAGE CONTAINER --> 
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

    <script src="~/vendors/popperjs/popper.min.js" defer></script>

    <!-- Bootstrap JS [ OPTIONAL ] -->
    <script src="~/vendors/bootstrap/bootstrap.min.js" defer></script>

    <!-- Nifty JS [ OPTIONAL ] -->
    <script src="~/js/nifty.js" defer></script>

    <!-- Nifty Settings [ DEMO ] -->
    <script src="~/js/demo-purpose-only.js" defer></script>

    <!-- Toastr -->
    <script src="~/js/toastr/toastr.min.js"></script>

    <script src="~/js/toastr/toastr.js"></script>

</body>

</html>

@if (TempData["script"] != null)
{
    <script>
        $(document).ready(function () {
            @Html.Raw(TempData["script"])
        })
    </script>

    ViewBag.Script = null;
}

<script>
    $("#login").click(function () {

        if ($("#user").val() == "") {
            $("#userValida").prop('hidden', false);
        } else {
            $("#userValida").prop('hidden', true);
        }

        if ($("#contrasena").val() == "") {
            $("#contValida").prop('hidden', false);
        } else {
            $("#contValida").prop('hidden', true);
        }

        if ($("#user").val() != "" && $("#contrasena").val() != "") {
            $("#formLogin").submit();
        }
    })
</script>

