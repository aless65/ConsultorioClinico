@model Consultorio.WebUI.Models.UsuariosViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Empleados</h2>
    </div>
    <div class="card-body">
        <h2>Editar registro</h2>
        <div class="d-flex justify-content-end">
            <a asp-action="Index">Regresar al index</a>
        </div>
        <form asp-action="Edit">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-6">
                    <label asp-for="user_NombreUsuario" class="control-label"></label>
                    <input asp-for="user_NombreUsuario" class="form-control" />
                    <span asp-validation-for="user_NombreUsuario" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="role_Id" class="control-label"></label>
                    <select asp-for="role_Id" class="form-control" asp-items="ViewBag.role_Id">
                        <option value="">-- Seleccione un Rol --</option>
                    </select>
                    <span asp-validation-for="role_Id" class="text-danger"></span>
                </div>
                <div class="form-group col-6 mt-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="user_EsAdmin" /> @Html.DisplayNameFor(model => model.user_EsAdmin)
                    </label>
                    @*<label asp-for="user_EsAdmin" class="control-label"></label>
            <br />
            <input asp-for="user_EsAdmin" type="checkbox" id="EsAdminEdit" />
            <span asp-validation-for="user_EsAdmin" class="text-danger"></span>*@
                </div>
                <div class="form-group col-6 mt-3">
                    <label asp-for="empe_Id" class="control-label"></label>
                    <select asp-for="role_Id" class="form-control" asp-items="ViewBag.empe_Id">
                        <option value="">-- Seleccione un Rol --</option>
                    </select>
                    <span asp-validation-for="empe_Id" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-6 mt-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="user_Estado" /> @Html.DisplayNameFor(model => model.user_Estado)
                    </label>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

