@model Consultorio.WebUI.Models.UsuariosViewModel

@*@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@

    <div class="row" id="create">
        <h2>Nuevo registro</h2>
        <div class="d-flex justify-content-end">
            <a href="#" id="Cancel">Regresar al index</a>
        </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="user_NombreUsuario" class="control-label"></label>
                        <input asp-for="user_NombreUsuario" class="form-control" />
                        <span asp-validation-for="user_NombreUsuario" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="user_Contrasena" class="control-label"></label>
                        <input type="password" asp-for="user_Contrasena" class="form-control" />
                        <span asp-validation-for="user_Contrasena" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="empe_Id" class="control-label"></label>
                        @*<input asp-for="empe_Id" class="form-control" />*@
                        <select asp-for="empe_Id" class="form-control" asp-items="ViewBag.empe_Id">
                            <option value="">-- Seleccione un Empleado --</option>
                        </select>
                        <span asp-validation-for="empe_Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="role_Id" class="control-label"></label>
                        @*<input asp-for="role_Id" class="form-control" />*@
                        <select asp-for="role_Id" class="form-control" asp-items="ViewBag.role_Id">
                            <option value="">-- Seleccione un Rol --</option>
                        </select>
                        <span asp-validation-for="role_Id" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <br />
                <div class="col-6">
                    <br />
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="user_EsAdmin" /> @Html.DisplayNameFor(model => model.user_EsAdmin)
                        </label>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
<script>
        $(document).ready(function () {

            $('#New').on('click', function () {

                $("#nombreCreateValidation").prop('hidden', true);

                $("#create").fadeIn('slow');
                $(".card-body").animate({ height: $("#create").height() + 35 }, 500);
                $("#index").hide();
            });
        });
</script>
