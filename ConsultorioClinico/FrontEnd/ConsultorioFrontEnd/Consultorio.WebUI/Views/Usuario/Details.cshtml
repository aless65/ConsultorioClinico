@model IEnumerable<Consultorio.WebUI.Models.UsuariosViewModel>

@{
    ViewData["Title"] = "Detalles";
}

<div class="card mb-4 col-xl-8 offset-xl-2">
    <div class="card-header">
        <h1>Detalles</h1>
    </div>
    <div class="card-body">
        <div id="details">
            @foreach (var item in Model)
            {
            <div class="row">
                <div class="form-group col-6">
                    <h5>ID</h5>
                    @Html.DisplayFor(modelItem => item.user_Id)
                </div>

                <div class="form-group col-6">
                    <h5>Empleado</h5>
                    @Html.DisplayFor(modelItem => item.user_NombreUsuario)
                </div>
                <div class="form-group col-6">
                    <h5>ID</h5>
                    @Html.DisplayFor(modelItem => item.role_Nombre)
                </div>

                <div class="form-group col-6">
                    <h5>Empleado</h5>
                    @Html.DisplayFor(modelItem => item.empe_NombreCompleto)
                </div>

            </div>
                <div class="form-group col-3 mt-3">
                    @Html.ActionLink("Edit", "Edit", new { id = item.user_Id }, new { @class = "btn btn-outline-warning" })
                    @*<button class="btn btn-warning EditarDetalle" data-id="@item.user_Id" data-nombre="@item.user_NombreUsuario" data-role="@item.role_Nombre" data-empleado="@item.empe_NombreCompleto">
                        Editar
                    </button>*@ |
                    <a asp-action="Index" class="btn btn-dark">Regresar</a>
                </div>
            }
            <div style="height:20px"></div>
            <div class="card">
                <div class="card-header"><h2>Auditoria</h2></div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Accion</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><label>Creacion</label></td>
                                <td>@Html.DisplayFor(modelItem => item.user_UsuCreacion_Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.user_FechaCreacion)</td>
                            </tr>
                            <tr>
                                <td>Modificacion</td>
                                <td>@Html.DisplayFor(modelItem => item.user_UsuModificacion_Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.user_FechaModificacion)</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
        @*<partial name="Edit" model="new Consultorio.WebUI.Models.UsuariosViewModel()" />*@
    </div>
</div>

<script>
    $("#edit").hide();

    $(document).ready(function () {
        $("#Cancel").click(function () {
            $("#create").hide();
            $("#details").fadeIn('slow');
            $(".card-body").animate({ height: $("#details").height() + 35 }, 500);
        });

        $(".Cancel").click(function () {
            $("#edit").hide();
            $("#details").fadeIn('slow');
            $(".card-body").animate({ height: $("#details").height() + 35 }, 500);
        });
    })
</script>


