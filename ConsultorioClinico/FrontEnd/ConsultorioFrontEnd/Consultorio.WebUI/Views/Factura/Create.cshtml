@model Consultorio.WebUI.Models.FacturasYDetallesViewModel

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h2>Nueva factura</h2>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="Factura">
                    <div class="form-group">
                        <label asp-for="paci_Id" class="control-label"></label>
                        <select asp-for="paci_Id" class="form-control" asp-items="ViewBag.paci_Id">
                            <option>-- Seleccione un paciente --</option>
                        </select>
                        <span asp-validation-for="paci_Id" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="empe_Id" class="control-label"></label>
                        <select asp-for="empe_Id" class="form-control" asp-items="ViewBag.empe_Id">
                            <option>-- Seleccione un empleado --</option>
                        </select>
                        <span asp-validation-for="empe_Id" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="meto_Id" class="control-label"></label>
                        <select asp-for="meto_Id" class="form-control" asp-items="ViewBag.meto_Id">
                            <option>-- Seleccione un método --</option>
                        </select>
                        <span asp-validation-for="meto_Id" class="text-danger"></span>
                    </div>
                    <br />
                    @*<a asp-action="Index" class="btn btn-danger">Cerrar</a>*@
                    <input type="submit" id="subirFactura" class="btn btn-info" value="Siguiente" />
                </form>
            </div>
        </div>
    </div>

    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-end">
                    <a asp-action="Index">Regresar</a>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="CreateDetalle">
                    <div class="form-group">
                        <input asp-for="fact_Id" class="form-control" hidden />
                    </div>
                    <div class="form-group">
                        <label asp-for="cons_Id" class="control-label"></label>
                        <select asp-for="cons_Id" class="form-control" disabled asp-items="ViewBag.cons_Id">
                            <option>-- Seleccione una consulta --</option>
                        </select>
                        <span asp-validation-for="cons_Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="cons_Costo" class="control-label"></label>
                        <input class="form-control" type="text" asp-for="cons_Costo" disabled />
                        <span asp-validation-for="cons_Costo" class="text-danger"></span>
                    </div>
                    <br />
                    <input type="submit" id="subirFacturaDetalles" class="btn btn-secondary" value="Crear" />
                    <a asp-action="Index" class="btn btn-danger">Finalizar factura</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-hover" id="DataTable">
                <thead>
                    <tr>
                        <th>N° Factura</th>
                        <th>Consulta</th>
                        <th>Costo</th>
                        <th>Precio total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detalle in ViewBag.detalles)
                    {
                        <tr>
                            <td>@detalle.fact_Id</td>
                            <td>@detalle.cons_Nombre</td>
                            @*<td>@detalle.factdeta_Cantidad</td>*@
                            <td>@detalle.cons_Costo</td>
                            @*<td>@detalle.factdeta_PrecioTotal</td>*@
                            <td>
                                @*<a onclick="AbrirModalEdit('@detalle.factdeta_Id,@detalle.prod_Id,@detalle.factdeta_Cantidad,@detalle.cate_Id,@detalle.fact_Id')" id="btnEditarDetalle" class="btn btn-warning">Editar</a> |*@
                                @*<a onclick="eliminar(@detalle.factdeta_Id, @detalle.fact_Id)" id="btnEliminarDetalle" class="btn btn-danger">Borrar</a>*@
                            </td>
                        </tr>

                        //subtotal = detalle.factdeta_PrecioTotal + subtotal;
                    }
                </tbody>
            </table>

            @*@{
                IVA = subtotal * 0.15M;
                total = subtotal + IVA;
            }
            <div class="row">
                <div class="col-4 d-flex justify-content-end">
                    <br />
                    <label>Subtotal:</label>
                    <input class="form-control" disabled value="@subtotal" />
                    <br />
                    <label>IVA:</label>
                    <input class="form-control" disabled value="@(Math.Round(IVA, 2))" />
                    <br />
                    <label>Total:</label>
                    <input class="form-control" disabled value="@(Math.Round(total, 2))" />
                </div>
            </div>*@
        </div>
    </div>
</div>

@if (TempData["script"] != null)
{
    <script>
        $(document).ready(function () {
            @Html.Raw(TempData["script"])
        })
    </script>

    TempData.Remove("script");
}

<script>
    $(document).ready(function () {
        if ($("#paci_Id").prop('disabled')) {
